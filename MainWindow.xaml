        <RichTextBox x:Name="RichBox" HorizontalAlignment="Left" Height="151" VerticalAlignment="Top" Width="453" Margin="271,331,0,0" Visibility="Hidden">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
